# Editor configuration, see https://editorconfig.org
root = true

#### Core EditorConfig Options ####
[*]
charset = utf-8

# Indentation and spacing
indent_size = 4
indent_style = tab
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
